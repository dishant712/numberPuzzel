<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17223b"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Number Puzzle"
            android:textColor="#ff6768"
            android:textSize="50dp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="28dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/text" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#6b778d"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="5"
                        android:textColor="#17223b"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:background="@drawable/bt1"
                        app:backgroundTint="@null" />

                    <Button
                        android:id="@+id/b1"
                        android:layout_marginTop="10dp"
                        app:backgroundTint="@null"
                        android:text="8"
                        android:textColor="#17223b"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:background="@drawable/bt2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <Button
                        android:id="@+id/b2"
                        app:backgroundTint="@null"
                        android:text="1"
                        android:textColor="#17223b"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:background="@drawable/bt3"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b3"
                        app:backgroundTint="@null"
                        android:text="3"
                        android:textColor="#17223b"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:background="@drawable/bt4"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/b4"
                        android:layout_marginTop="10dp"
                        app:backgroundTint="@null"
                        android:text="4"
                        android:textColor="#17223b"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:background="@drawable/bt5"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <Button
                        android:id="@+id/b5"
                        app:backgroundTint="@null"
                        android:text="2"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:textColor="#17223b"
                        android:background="@drawable/bt4"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <Button
                        android:id="@+id/b6"
                        android:layout_marginBottom="10dp"
                        app:backgroundTint="@null"
                        android:text="6"
                        android:textColor="#17223b"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:background="@drawable/bt7"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <Button

                        android:id="@+id/b7"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        app:backgroundTint="@null"
                        android:text="7"
                        android:textColor="#17223b"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:background="@drawable/bt2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <Button

                        android:id="@+id/b8"
                        android:layout_marginBottom="10dp"
                        app:backgroundTint="@null"
                        android:textStyle="bold"
                        android:textSize="50dp"
                        android:textColor="#17223b"
                        android:background="@drawable/bt9"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@null"
            android:background="@drawable/reset"
            android:text="RESET"
            android:textStyle="bold"
            android:textColor="#17223b"
            android:layout_margin="20dp"
            android:textSize="30dp"/>
    </LinearLayout>

</LinearLayout>